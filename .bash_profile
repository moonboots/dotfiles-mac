export ANDROID_HOME=~/Library/Android/sdk
export ANDROID_NDK=~/Library/Android/sdk/ndk-bundle
alias ls='ls -G'

PS1='$PWD \[\e[1;32m\]\u@\h \[\e[0m\]\n$ '
